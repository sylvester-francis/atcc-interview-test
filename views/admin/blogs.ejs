<%- include('../partials/header') %>

<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated slideInDown">Manage Blog Posts</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Manage Blogs</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-6">
                <h2>Blog Posts</h2>
            </div>
            <div class="col-md-6 text-end">
                <a href="/admin/blog/new" class="btn btn-primary">Create New Post</a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <select class="form-select" name="status">
                                    <option value="">All Status</option>
                                    <option value="draft" <%= selectedStatus === 'draft' ? 'selected' : '' %>>Draft</option>
                                    <option value="published" <%= selectedStatus === 'published' ? 'selected' : '' %>>Published</option>
                                    <option value="archived" <%= selectedStatus === 'archived' ? 'selected' : '' %>>Archived</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-outline-primary">Filter</button>
                                <a href="/admin/blogs" class="btn btn-outline-secondary">Clear</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <% if (blogs.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Author</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th>Views</th>
                                            <th>Updated</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% blogs.forEach(blog => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= blog.title %></strong>
                                                    <% if (blog.excerpt) { %>
                                                        <br><small class="text-muted"><%= blog.excerpt.substring(0, 100) %>...</small>
                                                    <% } %>
                                                </td>
                                                <td><%= blog.author.firstName %> <%= blog.author.lastName %></td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= blog.category.charAt(0).toUpperCase() + blog.category.slice(1) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= blog.status === 'published' ? 'success' : blog.status === 'draft' ? 'warning' : 'secondary' %>">
                                                        <%= blog.status.charAt(0).toUpperCase() + blog.status.slice(1) %>
                                                    </span>
                                                </td>
                                                <td><%= blog.views || 0 %></td>
                                                <td><%= new Date(blog.updatedAt).toLocaleDateString() %></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <% if (blog.status === 'published') { %>
                                                            <a href="/blog/<%= blog.slug %>" class="btn btn-outline-info" target="_blank">View</a>
                                                        <% } %>
                                                        <a href="/admin/blog/<%= blog._id %>/edit" class="btn btn-outline-primary">Edit</a>
                                                        <% if (user.role === 'admin' || user.role === 'editor') { %>
                                                            <form action="/admin/blog/<%= blog._id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this blog post?')">
                                                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                            </form>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <% if (totalPages > 1) { %>
                                <nav aria-label="Blog pagination">
                                    <ul class="pagination justify-content-center">
                                        <% for (let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %><%= selectedStatus ? '&status=' + selectedStatus : '' %>"><%= i %></a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <h5>No blog posts found</h5>
                                <p class="text-muted">Start by creating your first blog post.</p>
                                <a href="/admin/blog/new" class="btn btn-primary">Create New Post</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>