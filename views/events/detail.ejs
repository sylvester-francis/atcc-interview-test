<%- include('../partials/header') %>

<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-4 text-white animated slideInDown"><%= event.title %></h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="/events">Events</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Event Details</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <% if (event.featuredImage) { %>
                        <img src="<%= event.featuredImage %>" class="card-img-top" alt="<%= event.title %>" style="height: 400px; object-fit: cover;">
                    <% } %>
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <span class="badge bg-primary me-2">
                                <%= event.category.charAt(0).toUpperCase() + event.category.slice(1) %>
                            </span>
                            <span class="badge bg-<%= event.status === 'upcoming' ? 'success' : event.status === 'ongoing' ? 'warning' : 'secondary' %>">
                                <%= event.status.charAt(0).toUpperCase() + event.status.slice(1) %>
                            </span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6><i class="fas fa-calendar text-primary me-2"></i>Date & Time</h6>
                                <p>
                                    <strong>Start:</strong> <%= new Date(event.startDate).toLocaleDateString('en-US', { 
                                        weekday: 'long',
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %><br>
                                    <strong>End:</strong> <%= new Date(event.endDate).toLocaleDateString('en-US', { 
                                        weekday: 'long',
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="fas fa-map-marker-alt text-primary me-2"></i>Location</h6>
                                <p>
                                    <%= event.location.address %><br>
                                    <%= event.location.city %>, <%= event.location.province %>
                                    <% if (event.location.postalCode) { %>
                                        <%= event.location.postalCode %>
                                    <% } %>
                                </p>
                            </div>
                        </div>

                        <% if (event.ticketPrice > 0) { %>
                            <div class="alert alert-info">
                                <h6><i class="fas fa-ticket-alt me-2"></i>Ticket Price: $<%= event.ticketPrice %></h6>
                            </div>
                        <% } else { %>
                            <div class="alert alert-success">
                                <h6><i class="fas fa-ticket-alt me-2"></i>Free Event</h6>
                            </div>
                        <% } %>

                        <div class="event-description">
                            <h5>About This Event</h5>
                            <%= event.description.replace(/\n/g, '<br>') %>
                        </div>

                        <% if (event.tags && event.tags.length > 0) { %>
                            <div class="mt-4 pt-3 border-top">
                                <h6>Tags:</h6>
                                <% event.tags.forEach(tag => { %>
                                    <span class="badge bg-light text-dark me-2">#<%= tag %></span>
                                <% }) %>
                            </div>
                        <% } %>

                        <% if (event.contactEmail || event.contactPhone) { %>
                            <div class="mt-4 pt-3 border-top">
                                <h6>Contact Information:</h6>
                                <% if (event.contactEmail) { %>
                                    <p><i class="fas fa-envelope me-2"></i><a href="mailto:<%= event.contactEmail %>"><%= event.contactEmail %></a></p>
                                <% } %>
                                <% if (event.contactPhone) { %>
                                    <p><i class="fas fa-phone me-2"></i><a href="tel:<%= event.contactPhone %>"><%= event.contactPhone %></a></p>
                                <% } %>
                            </div>
                        <% } %>

                        <% if (event.externalLink) { %>
                            <div class="mt-4">
                                <a href="<%= event.externalLink %>" target="_blank" class="btn btn-primary">
                                    <i class="fas fa-external-link-alt me-2"></i>Learn More
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <% if (event.organizer) { %>
                    <div class="card shadow-sm mt-4">
                        <div class="card-body">
                            <h5>Event Organizer</h5>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                                     style="width: 60px; height: 60px; font-size: 1.5rem;">
                                    <%= event.organizer.firstName.charAt(0) %><%= event.organizer.lastName.charAt(0) %>
                                </div>
                                <div>
                                    <h6 class="mb-1"><%= event.organizer.firstName %> <%= event.organizer.lastName %></h6>
                                    <small class="text-muted">ATCC Team Member</small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5>Related Events</h5>
                    </div>
                    <div class="card-body">
                        <% if (relatedEvents.length > 0) { %>
                            <% relatedEvents.forEach(relatedEvent => { %>
                                <div class="mb-3 pb-3 border-bottom">
                                    <h6>
                                        <a href="/events/<%= relatedEvent._id %>" class="text-decoration-none">
                                            <%= relatedEvent.title %>
                                        </a>
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i> 
                                        <%= new Date(relatedEvent.startDate).toLocaleDateString() %>
                                    </small>
                                    <br>
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt"></i> 
                                        <%= relatedEvent.location.city %>, <%= relatedEvent.location.province %>
                                    </small>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No related events found.</p>
                        <% } %>
                        <div class="text-center">
                            <a href="/events" class="btn btn-outline-primary btn-sm">View All Events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.event-description {
    line-height: 1.8;
    font-size: 1.1rem;
}

.event-description h1, .event-description h2, .event-description h3, .event-description h4, .event-description h5, .event-description h6 {
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.event-description p {
    margin-bottom: 1.5rem;
}
</style>

<%- include('../partials/footer') %>