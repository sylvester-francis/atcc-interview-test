<%- include('../partials/header') %>

<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated slideInDown">Business Directory</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Directory</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-filter me-2"></i>Filter Businesses</h5>
                    </div>
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label for="search" class="form-label">Search</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       placeholder="Business name, services..." value="<%= filters.search %>">
                            </div>
                            <div class="col-md-3">
                                <label for="category" class="form-label">Category</label>
                                <select class="form-select" id="category" name="category">
                                    <option value="">All Categories</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category %>" <%= filters.category === category ? 'selected' : '' %>>
                                            <%= category.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="city" class="form-label">City</label>
                                <select class="form-select" id="city" name="city">
                                    <option value="">All Cities</option>
                                    <% cities.forEach(city => { %>
                                        <option value="<%= city %>" <%= filters.city === city ? 'selected' : '' %>>
                                            <%= city %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="province" class="form-label">Province</label>
                                <select class="form-select" id="province" name="province">
                                    <option value="">All Provinces</option>
                                    <% provinces.forEach(province => { %>
                                        <option value="<%= province %>" <%= filters.province === province ? 'selected' : '' %>>
                                            <%= province %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <div class="d-grid gap-2 w-100">
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                    <a href="/directory" class="btn btn-outline-secondary">Clear</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <h4>Tamil Canadian Businesses</h4>
                <p class="text-muted">Found <%= totalBusinesses %> businesses</p>
            </div>
            <div class="col-md-6 text-end">
                <% if (user && (user.role === 'admin' || user.role === 'editor')) { %>
                    <a href="/directory/admin/manage" class="btn btn-outline-primary">Manage Directory</a>
                <% } %>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <% if (businesses.length > 0) { %>
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col">Business</th>
                                            <th scope="col">Owner</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Location</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% businesses.forEach(business => { %>
                                            <tr <%= business.isFeatured ? 'class="table-warning"' : '' %>>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <% if (business.logo) { %>
                                                            <img src="<%= business.logo %>" alt="<%= business.businessName %>" 
                                                                 class="me-3 rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                                        <% } else { %>
                                                            <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3" 
                                                                 style="width: 40px; height: 40px; font-size: 1.2rem;">
                                                                <%= business.businessName.charAt(0) %>
                                                            </div>
                                                        <% } %>
                                                        <div>
                                                            <strong><%= business.businessName %></strong>
                                                            <% if (business.isFeatured) { %>
                                                                <span class="badge bg-warning text-dark ms-2">Featured</span>
                                                            <% } %>
                                                            <% if (business.description) { %>
                                                                <br><small class="text-muted"><%= business.description.substring(0, 60) %>...</small>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <%= business.fullOwnerName %>
                                                </td>
                                                <td>
                                                    <a href="tel:<%= business.contactInfo.phone %>" class="text-decoration-none">
                                                        <%= business.contactInfo.phone %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="mailto:<%= business.contactInfo.email %>" class="text-decoration-none">
                                                        <%= business.contactInfo.email %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <small>
                                                        <%= business.location.city %>, <%= business.location.province %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/directory/<%= business._id %>" class="btn btn-outline-primary">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                        <% if (business.contactInfo.website) { %>
                                                            <a href="<%= business.contactInfo.website %>" target="_blank" class="btn btn-outline-success">
                                                                <i class="fas fa-external-link-alt"></i>
                                                            </a>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <% if (totalPages > 1) { %>
                        <nav aria-label="Directory pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.city ? '&city=' + filters.city : '' %><%= filters.province ? '&province=' + filters.province : '' %><%= filters.search ? '&search=' + filters.search : '' %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-store fa-5x text-muted mb-3"></i>
                        <h4>No businesses found</h4>
                        <p class="text-muted">
                            <% if (filters.search || filters.category || filters.city || filters.province) { %>
                                Try adjusting your filters or <a href="/directory">view all businesses</a>.
                            <% } else { %>
                                Be the first to add a business to our directory!
                            <% } %>
                        </p>
                        <% if (user && (user.role === 'admin' || user.role === 'editor')) { %>
                            <a href="/directory/admin/new" class="btn btn-primary">Add Business</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<style>
.table-responsive {
    border-radius: 0.375rem;
}

.table th {
    border-top: none;
    font-weight: 600;
    font-size: 0.9rem;
}

.table td {
    vertical-align: middle;
}

.table-hover tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
}
</style>

<%- include('../partials/footer') %>