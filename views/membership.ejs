<%- include('partials/header') %>

<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated slideInDown">Membership</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Membership</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <!-- Membership Introduction -->
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">Join the Association of Tamil Canadian Community</h2>
                <p class="lead">
                    Become part of a vibrant community of 5,000+ Tamil Canadians across Canada. 
                    Connect, grow, and make a difference together.
                </p>
            </div>
        </div>

        <!-- Membership Benefits -->
        <div class="row mb-5">
            <div class="col-12">
                <h3 class="text-center mb-5">Membership Benefits</h3>
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 text-center shadow-sm card-hover">
                            <div class="card-body p-4">
                                <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <h5 class="card-title">Community Network</h5>
                                <p class="card-text">Connect with Tamil professionals, families, and students across Canada through our extensive network.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 text-center shadow-sm card-hover">
                            <div class="card-body p-4">
                                <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-calendar-alt fa-2x"></i>
                                </div>
                                <h5 class="card-title">Exclusive Events</h5>
                                <p class="card-text">Access to member-only cultural events, workshops, networking sessions, and community gatherings.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 text-center shadow-sm card-hover">
                            <div class="card-body p-4">
                                <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-briefcase fa-2x"></i>
                                </div>
                                <h5 class="card-title">Career Support</h5>
                                <p class="card-text">Professional development opportunities, job referrals, and mentorship programs.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 text-center shadow-sm card-hover">
                            <div class="card-body p-4">
                                <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-handshake fa-2x"></i>
                                </div>
                                <h5 class="card-title">Legal & Advocacy Support</h5>
                                <p class="card-text">Access to legal guidance, community advocacy, and support for immigration and settlement issues.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 text-center shadow-sm card-hover">
                            <div class="card-body p-4">
                                <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-graduation-cap fa-2x"></i>
                                </div>
                                <h5 class="card-title">Educational Resources</h5>
                                <p class="card-text">Scholarships, educational workshops, and resources for students and lifelong learners.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 text-center shadow-sm card-hover">
                            <div class="card-body p-4">
                                <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-heart fa-2x"></i>
                                </div>
                                <h5 class="card-title">Cultural Preservation</h5>
                                <p class="card-text">Participate in preserving and promoting Tamil culture, language, and traditions in Canada.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Membership Types -->
        <div class="row mb-5">
            <div class="col-12">
                <h3 class="text-center mb-5">Membership Types</h3>
                <div class="row g-4">
                    <div class="col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header text-center bg-light">
                                <h4 class="mb-0">Individual Membership</h4>
                                <p class="text-muted mb-0">For individuals and professionals</p>
                            </div>
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <span class="h3 text-primary">$25</span>
                                    <span class="text-muted">/year</span>
                                </div>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Full access to all events</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Newsletter subscription</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Community directory access</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Career support resources</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Voting rights</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card h-100 shadow-sm border-primary">
                            <div class="card-header text-center bg-primary text-white">
                                <h4 class="mb-0">Family Membership</h4>
                                <p class="mb-0">For families (up to 4 members)</p>
                                <span class="badge bg-warning text-dark">Most Popular</span>
                            </div>
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <span class="h3 text-primary">$40</span>
                                    <span class="text-muted">/year</span>
                                </div>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>All Individual benefits</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Family event discounts</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Children's programs access</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Educational scholarships eligibility</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Priority event registration</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header text-center bg-light">
                                <h4 class="mb-0">Student Membership</h4>
                                <p class="text-muted mb-0">For students (with valid ID)</p>
                            </div>
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <span class="h3 text-primary">$15</span>
                                    <span class="text-muted">/year</span>
                                </div>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Student event access</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Career guidance</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Mentorship programs</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Scholarship opportunities</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Networking events</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body p-5">
                        <h3 class="card-title">Ready to Join Our Community?</h3>
                        <p class="card-text lead">
                            Become part of a growing network of Tamil Canadians making a difference across the country.
                        </p>
                        <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                            <a href="/contact" class="btn btn-light btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Sign Up for Membership
                            </a>
                            <a href="/contact" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-envelope me-2"></i>Contact Us
                            </a>
                        </div>
                        <small class="d-block mt-3">
                            Have questions? Email us at <a href="mailto:info@atcccanada.ca" class="text-light">info@atcccanada.ca</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="row mt-5">
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            How to Join
                        </h5>
                        <ol class="list-group list-group-numbered list-group-flush">
                            <li class="list-group-item border-0 px-0">Contact us through our membership form or email</li>
                            <li class="list-group-item border-0 px-0">Complete the membership application</li>
                            <li class="list-group-item border-0 px-0">Submit required documents (if applicable)</li>
                            <li class="list-group-item border-0 px-0">Pay annual membership fee</li>
                            <li class="list-group-item border-0 px-0">Receive welcome package and member benefits</li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-calendar-check text-primary me-2"></i>
                            What's Included
                        </h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item border-0 px-0">
                                <i class="fas fa-check text-success me-2"></i>
                                Access to 20+ annual events
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <i class="fas fa-check text-success me-2"></i>
                                Monthly community newsletter
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <i class="fas fa-check text-success me-2"></i>
                                Business directory listing
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <i class="fas fa-check text-success me-2"></i>
                                Legal and settlement support
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <i class="fas fa-check text-success me-2"></i>
                                Community advocacy participation
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

